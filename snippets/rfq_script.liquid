<script type="text/javascript" src="{{ 'globorequestforquote_params.js' | asset_url }}" ></script>
<script type="text/javascript">
    var GRFQConfigs = GRFQConfigs || {};
    GRFQConfigs.customer = {
        'id': '{{customer.id}}',
        'email': '{{customer.email}}',
        'name': '{{customer.name}}'
    };
    GRFQConfigs.pageempty = "Vous n&#039;avez pas de demandes d&#039;offre"
    GRFQConfigs.product = {{ product | json }};
    {% if product %}        GRFQConfigs.product.selected_or_first_available_variant = {{ product.selected_or_first_available_variant | json }}        {% endif %}</script>
<script type="text/javascript" src="{{ 'globorequestforquote.js' | asset_url }}" defer="defer"></script>
{% for collection in product.collections %}    <script> 
        if(typeof GRFQConfigs.product['collection'] === 'undefined') 
            GRFQConfigs.product['collection'] = []; 
        GRFQConfigs.product['collection'].push('{{ collection.id }}'); 
    </script> 
{% endfor %}
{{ 'globorequestforquote.css' | asset_url | stylesheet_tag }}<style>
    .rfq-btn{
        background: #9f9e9e;
        color: #ffffff;
        font-size: 16px;
    }
</style>